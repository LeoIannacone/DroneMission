\begin_layout LyX-Code
@Override
\end_layout

\begin_layout LyX-Code
protected void updateGauges(String data) throws Exception {
\end_layout

\begin_deeper
\begin_layout LyX-Code
env.println("DATA DRONE: " + data);
\end_layout

\end_deeper
\begin_layout LyX-Code
}
\end_layout

\begin_layout LyX-Code
