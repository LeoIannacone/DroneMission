\end_layout

\begin_layout LyX-Code
return r.getType() == TypesReply.REPLY_OK;
\end_layout

\end_deeper
\begin_layout LyX-Code
};
\end_layout

\begin_layout LyX-Code
@Override
\end_layout

\begin_layout LyX-Code
protected String getWrongStartCommandReply() throws Exception {
\end_layout

\begin_deeper
\begin_layout LyX-Code
