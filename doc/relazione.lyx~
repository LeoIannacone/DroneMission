\end_layout

\begin_deeper
\begin_layout LyX-Code
replyToRequest command(call getOkReplyToCommand()); 
\end_layout

\begin_layout LyX-Code
exec startMission() 
\end_layout

\begin_layout LyX-Code
doOut sendnotify(call getNotifyStart()) 
\end_layout

\begin_layout LyX-Code
