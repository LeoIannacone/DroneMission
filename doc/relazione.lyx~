\end_layout

\begin_deeper
\begin_layout LyX-Code
set cmd = code.curInputMsgContent
\end_layout

\begin_layout LyX-Code
doOutIn sendCommand(cmd)
\end_layout

\begin_layout LyX-Code
acquireAnswerFor command
\end_layout

