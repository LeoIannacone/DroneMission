\end_layout

\begin_layout LyX-Code
r.setValue("Wrong start mission command");
\end_layout

\begin_layout LyX-Code
return Utils.adaptJSONToContact(r.toJSON());
\end_layout

\end_deeper
\begin_layout LyX-Code
}
\end_layout

\begin_layout LyX-Code
@Override
\end_layout

\begin_layout LyX-Code
protected void storeCommandAndReply(String c, String r) throws Exception
 {
\end_layout

\begin_deeper
\begin_layout LyX-Code
