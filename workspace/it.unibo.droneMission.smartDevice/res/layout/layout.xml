<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layoutidle"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_centerHorizontal="true"
android:gravity="center"
>

<TextView
	android:id="@+id/idleTextView"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Waiting for Mission"
	android:textStyle="bold"
	android:textSize="18pt"
	
	android:background="@drawable/black"
	android:textColor="@drawable/red"
/>
<Button 
	android:id="@+id/startReceivingData"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Start Observing Mission"
	android:textStyle="italic"
/>
<CheckBox
	android:id="@+id/bool"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="start or stop?"
	android:textStyle="italic"
	android:checked="true"
/>
<Button 
	android:id="@+id/test"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="start mission"
	android:textStyle="italic"
/>
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layoutData"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="4dp"
    android:gravity="center"
    android:orientation="horizontal" >

<TextView
    android:id="@+id/lblSpeed"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:background="@drawable/black"
    android:text="SPEED"
    android:gravity="center"
    android:textColor="@drawable/red"
    android:textSize="10pt"
    android:textStyle="bold" />

<TextView
    android:id="@+id/valSpeed"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black"
    android:gravity="center"
    android:text="UNKNOWN"
    android:textColor="@drawable/white"
    android:textSize="10pt"
    android:textStyle="bold" />

</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="4dp"
    android:gravity="center"
    android:orientation="horizontal" >

<TextView
    android:id="@+id/lblOdo"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/black"
    android:gravity="center"
    android:text="ODO"
    android:textColor="@drawable/red"
    android:textSize="10pt"
    android:textStyle="bold" />

<TextView
    android:id="@+id/valOdo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black"
    android:text="UNKNOWN"
    android:gravity="center"
    android:textColor="@drawable/white"
    android:textSize="10pt"
    android:textStyle="bold" />

</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="4dp"
    android:gravity="center"
    android:orientation="horizontal" >

<TextView
    android:id="@+id/lblFuel"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center"
    android:background="@drawable/black"
    android:gravity="center"
    android:text="FUEL"
    android:textColor="@drawable/red"
    android:textSize="10pt"
    android:textStyle="bold" />

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

<TextView
    android:id="@+id/valFuel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black"
    android:text="UNKNOWN"
    android:gravity="center"
    android:textColor="@drawable/white"
    android:textSize="10pt"
    android:textStyle="bold" />

<ProgressBar
    android:id="@+id/pbFuel"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:max="@integer/maxVal" />

</LinearLayout>
</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="4dp"
    android:gravity="center"
    android:orientation="horizontal" >

<TextView
    android:id="@+id/lblLat"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:background="@drawable/black"
    android:text="LATITUDE"
    android:gravity="center"
    android:textColor="@drawable/red"
    android:textSize="10pt"
    android:textStyle="bold" />

<TextView
    android:id="@+id/valLat"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black"
    android:gravity="center"
    android:text="UNKNOWN"
    android:textColor="@drawable/white"
    android:textSize="10pt"
    android:textStyle="bold" />

</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="4dp"
    android:gravity="center"
    android:orientation="horizontal" >

<TextView
    android:id="@+id/lblLong"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:background="@drawable/black"
    android:text="LONGITUDE"
    android:gravity="center"
    android:textColor="@drawable/red"
    android:textSize="10pt"
    android:textStyle="bold" />


<TextView
    android:id="@+id/valLong"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black"
    android:text="UNKNOWN"
    android:gravity="center"
    android:textColor="@drawable/white"
    android:textSize="10pt"
    android:textStyle="bold" />

</LinearLayout>
</LinearLayout>
<Button 
	android:id="@+id/update"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="update"
	android:textStyle="italic"
/>
<Button 
	android:id="@+id/endmission"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="end mission"
	android:textStyle="italic"
/>
<TextView
	android:id="@+id/output"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:text=""
	android:textStyle="italic"
	android:textSize="6pt"
	
	android:background="@drawable/white"
	android:textColor="@drawable/black"
/>
</LinearLayout>